<script>
    async function getRanking() {
        const tbody = document.getElementById('ranking-body');
        
        try {
            // 1. 리더보드 데이터 호출
            const response = await fetch('https://gmdkoreaforum.com/api/demonlist/leaderboard');
            const data = await response.json();
            
            // 데이터가 배열인지 확인 (API 응답 형식에 따라 수정될 수 있음)
            const players = Array.isArray(data) ? data : data.results;

            let html = "";
            // 상위 50명 루프
            for (let i = 0; i < Math.min(players.length, 50); i++) {
                const p = players[i];
                // API 필드명은 스크린샷의 '정상 반환 데이터' 형식을 참조함
                html += `
                    <tr>
                        <td class="rank-num">#${i + 1}</td>
                        <td class="player-name">${p.nickname}</td>
                        <td class="map-name">${p.hardest_level_name || 'N/A'}</td>
                        <td><a href="${p.hardest_video || '#'}" target="_blank" class="video-btn">Watch</a></td>
                    </tr>
                `;
            }
            tbody.innerHTML = html;

        } catch (e) {
            console.error(e);
            tbody.innerHTML = "<tr><td colspan='4'>데이터 로드 실패 (API 서버 상태를 확인하세요)</td></tr>";
        }
    }

    window.onload = getRanking;
</script>

</body>
